<div class='toilet-container'>
  <div class="toilet-info col-xs-12 col-sm-6">
    <div class="toilet-name">
      <h1><%= @toilet.name %></h1>
    </div>
    <div class="toilet-owner text-muted">
      <p><%= @toilet.user.first_name %></p>
    </div>
    <div class="toilet-description">
      <p><%= @toilet.description %></p>
    </div>
    <div class="toilet-address">
      <p class="text-muted">Address:</p>
      <p><%= @toilet.address %></p>
    </div>
    <a class="btn btn-primary" href="#">Action</a>
    <div class="toilet-price text-muted">
      <p><%= @toilet.price %>â‚¬</p>
    </div>
  </div>
  <div class="toilet-image col-xs-12 col-sm-6" style="background-image: url(<%= cl_image_path @toilet.photo %>);">
  </div>
</div>

<div class="reviews-list">
  <div class="card-review">
    <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large"/>
    <div class="card-review-content">
      <p><small>14th January</small></p>
      <p>Lorem ipsum dolor sit amet, <strong>consectetur</strong> adipisicing elit.</p>
    </div>

    <div class="card-review-actions">
      <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
      <a href="#">Delete <i class="far fa-trash-alt"></i></a>
    </div>
  </div>
</div>
