<%= simple_form_for(@toilet) do |f| %>
  <% if @toilet.errors.any? %>
  <h3>You have these errors:</h3>
  <ul>
    <% @toilet.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>
    <%= f.input :photo, required: true %>
    <%= f.input :price, required: true %>
    <%= f.input :address, required: true %>
    <%=f.input :available?, as: :boolean, required: true%>
    <%= f.input :photo_cache, as: :hidden %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
