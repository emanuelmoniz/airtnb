<%= simple_form_for(@toilet) do |f| %>
  <% if @toilet.errors.any? %>
  <h3>You have these errors:</h3>
  <ul>
    <% @toilet.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :address %>
    <%=f.input :available?, as: :boolean%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
